public class ReverseString {

	   public static void main(String[] args) {    
	        String str = "INDIQSOFT";       
	        String rStr = ""; 
            char ch;      
	        for(int i = 0; i < str.length(); i++)
	        {    
			    ch = str.charAt(i);
	            rStr = ch + rStr;    
	        }    
	            
	        System.out.println("Original string: " + str);        
	        System.out.println("Reverse of given string: " + rStr);    
	    }    
	}  








